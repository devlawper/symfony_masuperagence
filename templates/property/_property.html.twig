{# @var property \App\Entity\Property  #}
<div class="card mb-4">
    {% if property.fileName %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt="" class="card-img-top" style="width: 100%; height: auto">
    {% else %}
        <img src="{{ asset('images/properties/delivreuses.jpg') | imagine_filter('thumb') }}" alt="" class="card-img-top" style="width: 100%; height: auto">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property_show', {'slug': property.slug, 'id': property.id}) }}">
                {{ property.title }}
            </a>
        </h5>

        <p class="card-text">
            {{ property.surface }} m<sup>2</sup> - {{ property.city }} ({{ property.postalCode }})
        </p>

        <div class="text-primary" style="font-size: 2rem; font-weight:bold;">
            {{ property.formatedPrice }}
        </div>
    </div>
</div>